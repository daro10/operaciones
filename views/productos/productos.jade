extends ../default

block content
  
  include ../templates/nav
  
  div(class=['ui','container','grid','stackable'])
    div(class=['sixteen','wide', 'column'])
        h3(class=['ui', 'header', 'blue','dividing'])='Listado de productos'
  
        table(class=['ui', 'table', 'celled'] id='tbl', border='1')
          thead
              tr
                th='ID'
                th='NOMBRE'
                th='PRECIO'
                th='FECHA DE CREACION'
                th='STOCK'
                th='ACCIONES'
          tbody      
              each producto in productos  
                tr
                  td=producto.id_producto
                  td=producto.nombre
                  td=producto.precio
                  td=producto.fecha_creacion
                  td=producto.stock
                  td
                    //sjdasjdajskndjksandkjsajdnskj
                    a(class=['ui','button', 'icon'] href='#' data-tooltip='Eliminar' data-position='top center'
                                                    data-inverted)
                      i(class=['trash', 'icon'])
