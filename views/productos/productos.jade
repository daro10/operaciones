extends ../default

block content
  
  include ../templates/nav
  
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide', 'column'])
        h3(class=['ui', 'header', 'blue','dividing'])='Listado de productos'
  
        table(class=['ui', 'table', 'celled'] id='tbl')
          thead
              tr
                th='ID'
                th='NOMBRE'
                th='PRECIO'
                th='FECHA DE CREACION'
                th='STOCK'
                th='ACCIONES'
          tbody      
              each producto in productos  
                tr
                  td=producto.id_producto
                  td=producto.nombre
                  td=producto.precio
                  td=producto.fecha_creacion
                  td=producto.stock
                  td='Eliminar, Modificar'
