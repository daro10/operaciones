extends ../default

block content
  
  include ../templates/nav
  
  div(class=['ui','container','grid','stackable'])
    div(class=['ten','wide', 'column'])
      h2(class=['ui', 'header', 'blue', 'dividing', 'blue'])='Crear Productos'
      
      div(class='form-nuevoproducto')
        form(class=['ui', 'form']  method="post", action="http://localhost:3000/crearproducto")
          div(class='field')
            labe(for='nombre')='Nombre del producto'
            input(type="text", name='nombre' placeholder="Nombre Producto")
          div(class=['ui', 'three', 'fields'])
              div(class=['ui','field'])
                  label(for='precio')='Precio'
                  input(type="text", name='precio' placeholder="Precio")
              div(class=['ui','field'])       
                  label(for='stock')='stock'
                  input(type="text", name='stock' placeholder="stock")       
              div(class="field")
          button(class=['ui','button','basic','black'])='Crear Producto'
          div(class=['ui','message','error'])
      
      if info!=undefined
        div(class=['ui','message','success'])
          i(class=['close','icon'])
          div(class='header')='Producto Registrado'
          p=info
                               
  script(src="/javascripts/validacion.js")
